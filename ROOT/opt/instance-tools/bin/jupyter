#!/bin/bash

# Very simple wrapper to ensure the Vast Jupyter launcher uses the Python binary from ${DATA_DIRECTORY}venv/main 

. ${DATA_DIRECTORY}venv/main/bin/activate

type="$1"

# Bail out if this is not a launch command
if [[ $type != "notebook" ]] && [[ $type != "lab" ]]; then
        exec /usr/local/bin/jupyter "$@"
fi

shift

# Add some useful options to the default Jupyter startup
set -- "$type" \
  "--ContentsManager.allow_hidden=True" \
  "--ServerApp.root_dir=/" \
  "--ServerApp.preferred_dir=${JUPYTER_DIR:-${DATA_DIRECTORY:-/}}" \
  "$@"

/usr/local/bin/jupyter "$@" 2>&1 | tee -a /var/log/portal/jupyter.log
